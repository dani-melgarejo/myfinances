@using MyFinances.Logic.Models
@model EditMarketDataViewModel

@{
    ViewData["Title"] = "Editar Cotización";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-edit"></i> Editar Cotización - @Model.Ticker
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="AssetId" type="hidden" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Ticker" class="form-label">Ticker</label>
                                <input asp-for="Ticker" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Date" class="form-label">Fecha</label>
                                <input asp-for="Date" type="date" class="form-control" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Close" class="form-label">Precio Cierre</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Close" type="number" step="0.0001" class="form-control" />
                                </div>
                                <span asp-validation-for="Close" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                        <button type="button" class="btn btn-danger" id="btn-delete">
                            <i class="fas fa-trash"></i> Eliminar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle"></i> Información
                </h6>
            </div>
            <div class="card-body">
                <small class="text-muted">
                    <strong>Validaciones:</strong><br>
                    • El precio máximo debe ser mayor o igual a apertura y cierre<br>
                    • El precio mínimo debe ser menor o igual a apertura y cierre<br>
                    • Los campos de cambio se calculan automáticamente<br>
                    • El volumen debe ser un número positivo
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {

            // Botón eliminar
            $('#btn-delete').click(function() {
                if (confirm('¿Está seguro de que desea eliminar esta cotización?')) {
                    deleteMarketData();
                }
            });

        });

        function deleteMarketData() {
            const id = $('#Id').val();

            $.post('@Url.Action("Delete", "MarketData")', { id: id })
                .done(function(response) {
                    if (response.success) {
                        alert('Cotización eliminada correctamente.');
                        window.location.href = '@Url.Action("Index", "MarketData")';
                    } else {
                        alert('Error: ' + response.error);
                    }
                })
                .fail(function() {
                    alert('Error al eliminar la cotización.');
                });
        }
    </script>
}